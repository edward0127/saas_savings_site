<section class="mx-auto w-full max-w-6xl px-4 py-14 sm:px-6 lg:px-8">
  <div class="rounded-3xl border border-cyan-200 bg-white/95 p-8 shadow-sm">
    <p class="text-xs font-semibold uppercase tracking-wider text-cyan-700">Tudouke Solutions</p>
    <h1 class="mt-2 font-heading text-4xl font-bold text-slate-900"><%= @landing_page.hero_title %></h1>
    <p class="mt-4 text-base leading-7 text-slate-700"><%= @landing_page.hero_subtitle %></p>
    <% if @landing_page.intro.present? %>
      <p class="mt-4 text-sm leading-7 text-slate-600"><%= @landing_page.intro %></p>
    <% end %>
  </div>
</section>

<section class="mx-auto grid w-full max-w-6xl gap-6 px-4 pb-6 sm:px-6 lg:grid-cols-2 lg:px-8">
  <article class="rounded-2xl border border-slate-200 bg-white/95 p-6 shadow-sm">
    <h2 class="font-heading text-2xl font-bold text-slate-900"><%= @landing_page.problem_title %></h2>
    <ul class="mt-4 space-y-2 text-sm leading-6 text-slate-700">
      <% @landing_page.problem_points_list.each do |point| %>
        <li>- <%= point %></li>
      <% end %>
    </ul>
  </article>

  <article class="rounded-2xl border border-emerald-200 bg-emerald-50/80 p-6 shadow-sm">
    <h2 class="font-heading text-2xl font-bold text-slate-900"><%= @landing_page.solution_title %></h2>
    <ul class="mt-4 space-y-2 text-sm leading-6 text-slate-700">
      <% @landing_page.solution_points_list.each do |point| %>
        <li>- <%= point %></li>
      <% end %>
    </ul>
  </article>
</section>

<section class="mx-auto w-full max-w-6xl px-4 py-10 sm:px-6 lg:px-8">
  <div class="rounded-3xl border border-cyan-200 bg-gradient-to-br from-white via-cyan-50 to-emerald-50 p-6 shadow-sm lg:p-8">
    <h2 class="font-heading text-3xl font-bold text-slate-900"><%= @landing_page.cta_title_text %></h2>
    <p class="mt-3 max-w-3xl text-sm leading-6 text-slate-700"><%= @landing_page.cta_body_text %></p>
    <div class="mt-6 flex flex-wrap gap-3">
      <%= link_to "Get My Free Project Plan", "#{contact_path}#audit-form", class: "inline-flex rounded-full bg-gradient-to-r from-cyan-500 to-emerald-500 px-5 py-3 text-sm font-semibold text-white transition hover:from-cyan-600 hover:to-emerald-600" %>
      <%= link_to "Read FAQs", faq_path, class: "inline-flex rounded-full border border-slate-300 bg-white px-5 py-3 text-sm font-semibold text-slate-800 transition hover:border-cyan-500 hover:text-cyan-700" %>
    </div>
  </div>
</section>
