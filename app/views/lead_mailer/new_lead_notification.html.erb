<table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="background:#f8fafc;padding:24px 0;font-family:Arial,Helvetica,sans-serif;color:#0f172a;">
  <tr>
    <td align="center">
      <table role="presentation" width="640" cellspacing="0" cellpadding="0" style="width:640px;max-width:640px;background:#ffffff;border:1px solid #e2e8f0;border-radius:16px;overflow:hidden;">
        <tr>
          <td style="padding:20px 24px;background:linear-gradient(90deg,#06b6d4,#10b981);">
            <p style="margin:0;font-size:13px;letter-spacing:0.08em;text-transform:uppercase;color:#ecfeff;font-weight:700;">Tudouke</p>
            <h1 style="margin:6px 0 0;font-size:24px;line-height:1.3;color:#ffffff;">New Enquiry Received</h1>
          </td>
        </tr>
        <tr>
          <td style="padding:20px 24px 8px;">
            <p style="margin:0 0 6px;font-size:14px;color:#334155;">A new lead has been submitted from the website contact form.</p>
            <p style="margin:0;font-size:12px;color:#64748b;">Received: <%= @lead.created_at.in_time_zone.strftime("%Y-%m-%d %H:%M %Z") %></p>
          </td>
        </tr>
        <tr>
          <td style="padding:12px 24px 4px;">
            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="border-collapse:collapse;">
              <tr>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;width:160px;font-size:13px;color:#475569;font-weight:600;">Name</td>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;font-size:14px;color:#0f172a;"><%= @lead.name %></td>
              </tr>
              <tr>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;width:160px;font-size:13px;color:#475569;font-weight:600;">Email</td>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;font-size:14px;color:#0f172a;"><a href="mailto:<%= @lead.email %>" style="color:#0e7490;text-decoration:none;"><%= @lead.email %></a></td>
              </tr>
              <tr>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;width:160px;font-size:13px;color:#475569;font-weight:600;">Company</td>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;font-size:14px;color:#0f172a;"><%= @lead.company.presence || "-" %></td>
              </tr>
              <tr>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;width:160px;font-size:13px;color:#475569;font-weight:600;">Monthly Spend</td>
                <td style="padding:10px 0;border-bottom:1px solid #e2e8f0;font-size:14px;color:#0f172a;"><%= @lead.monthly_spend.present? ? number_with_delimiter(@lead.monthly_spend) : "-" %></td>
              </tr>
              <tr>
                <td style="padding:10px 0;width:160px;font-size:13px;color:#475569;font-weight:600;">Source Page</td>
                <td style="padding:10px 0;font-size:14px;color:#0f172a;"><%= @lead.source_page.presence || "-" %></td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td style="padding:8px 24px 10px;">
            <h2 style="margin:0 0 8px;font-size:14px;color:#0f172a;">Current Website or Tools</h2>
            <div style="padding:12px;border:1px solid #e2e8f0;border-radius:10px;background:#f8fafc;font-size:14px;line-height:1.6;color:#1e293b;">
              <%= simple_format(@lead.current_tools.presence || "-", {}, wrapper_tag: "div") %>
            </div>
          </td>
        </tr>
        <tr>
          <td style="padding:8px 24px 22px;">
            <h2 style="margin:0 0 8px;font-size:14px;color:#0f172a;">Message</h2>
            <div style="padding:12px;border:1px solid #e2e8f0;border-radius:10px;background:#f8fafc;font-size:14px;line-height:1.6;color:#1e293b;">
              <%= simple_format(@lead.message.presence || "-", {}, wrapper_tag: "div") %>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
