<section class="mx-auto w-full max-w-6xl">
  <div class="admin-page-hero border-indigo-300/20">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-indigo-200/90">Lead Profile</p>
        <h1 class="mt-2 font-heading text-3xl font-bold text-white">Lead Detail</h1>
        <p class="mt-2 text-sm text-slate-200/90"><%= @lead.name %> submitted from <%= @lead.source_page.presence || "unknown source" %>.</p>
      </div>
      <%= link_to "Back to Leads", admin_leads_path, class: "admin-btn-secondary" %>
    </div>
  </div>

  <div class="grid gap-5 lg:grid-cols-2">
    <article class="admin-card p-6">
      <h2 class="text-lg font-semibold text-white">Contact Snapshot</h2>
      <dl class="mt-4 space-y-3 text-sm">
        <div class="flex items-start justify-between gap-4 border-b border-white/10 pb-3">
          <dt class="text-slate-400">Name</dt>
          <dd class="font-semibold text-white"><%= @lead.name %></dd>
        </div>
        <div class="flex items-start justify-between gap-4 border-b border-white/10 pb-3">
          <dt class="text-slate-400">Email</dt>
          <dd class="text-slate-100"><%= @lead.email %></dd>
        </div>
        <div class="flex items-start justify-between gap-4 border-b border-white/10 pb-3">
          <dt class="text-slate-400">Company</dt>
          <dd class="text-slate-100"><%= @lead.company.presence || "-" %></dd>
        </div>
        <div class="flex items-start justify-between gap-4 border-b border-white/10 pb-3">
          <dt class="text-slate-400">Monthly Spend</dt>
          <dd class="text-slate-100"><%= @lead.monthly_spend.present? ? number_to_currency(@lead.monthly_spend) : "-" %></dd>
        </div>
        <div class="flex items-start justify-between gap-4 border-b border-white/10 pb-3">
          <dt class="text-slate-400">Source Page</dt>
          <dd class="max-w-[60%] break-all text-right text-slate-100"><%= @lead.source_page.presence || "-" %></dd>
        </div>
        <div class="flex items-start justify-between gap-4">
          <dt class="text-slate-400">Submitted At</dt>
          <dd class="text-right text-slate-100"><%= l(@lead.created_at, format: :long) %></dd>
        </div>
      </dl>
    </article>

    <div class="space-y-5">
      <article class="admin-card p-6">
        <h2 class="text-lg font-semibold text-white">Current Website or Tools</h2>
        <p class="mt-3 whitespace-pre-line text-sm leading-6 text-slate-200"><%= @lead.current_tools.presence || "-" %></p>
      </article>
      <article class="admin-card p-6">
        <h2 class="text-lg font-semibold text-white">Request Message</h2>
        <p class="mt-3 whitespace-pre-line text-sm leading-6 text-slate-200"><%= @lead.message.presence || "-" %></p>
      </article>
    </div>
  </div>
</section>
