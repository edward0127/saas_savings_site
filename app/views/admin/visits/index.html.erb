<section class="mx-auto w-full max-w-7xl">
  <div class="admin-page-hero border-fuchsia-300/20">
    <div class="flex flex-wrap items-start justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-fuchsia-200/90">Analytics</p>
        <h1 class="mt-2 font-heading text-3xl font-bold text-white sm:text-4xl">Traffic Overview</h1>
        <p class="mt-2 max-w-2xl text-sm text-slate-200/90">Daily access, human vs bot split, and visitor activity inferred from IP and user-agent fingerprint.</p>
      </div>

      <%= form_with url: admin_visits_path, method: :get, class: "flex flex-wrap items-end gap-2", local: true do |form| %>
        <div>
          <%= form.label :date, "Date", class: "mb-1 block text-xs font-semibold uppercase tracking-wider text-slate-300" %>
          <%= form.date_field :date, value: @selected_date, class: "admin-input" %>
        </div>
        <div>
          <%= form.label :days, "Window", class: "mb-1 block text-xs font-semibold uppercase tracking-wider text-slate-300" %>
          <%= form.select :days, options_for_select([[7, 7], [14, 14], [30, 30], [60, 60], [90, 90]], @days_window), {}, class: "admin-input" %>
        </div>
        <%= form.submit "Apply", class: "admin-btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-4">
    <article class="admin-stat-card border-cyan-300/20">
      <p class="text-xs uppercase tracking-wider text-slate-400">Total Hits (<%= @selected_date %>)</p>
      <p class="mt-2 text-3xl font-bold text-white"><%= @total_hits %></p>
    </article>
    <article class="admin-stat-card border-emerald-300/20 bg-emerald-500/10">
      <p class="text-xs uppercase tracking-wider text-slate-300">Human Hits</p>
      <p class="mt-2 text-3xl font-bold text-emerald-200"><%= @human_hits %></p>
    </article>
    <article class="admin-stat-card border-amber-300/20 bg-amber-500/10">
      <p class="text-xs uppercase tracking-wider text-slate-300">Bot Hits</p>
      <p class="mt-2 text-3xl font-bold text-amber-200"><%= @bot_hits %></p>
    </article>
    <article class="admin-stat-card border-sky-300/20 bg-sky-500/10">
      <p class="text-xs uppercase tracking-wider text-slate-300">Unique Visitors</p>
      <p class="mt-2 text-3xl font-bold text-sky-200"><%= @unique_visitors %></p>
    </article>
  </div>

  <div class="mt-8 grid gap-6 lg:grid-cols-2">
    <article class="admin-card p-5">
      <h2 class="text-lg font-semibold text-white">Daily Traffic (last <%= @days_window %> days)</h2>
      <div class="mt-4 overflow-hidden rounded-2xl border border-white/10">
        <table class="min-w-full text-left text-sm">
          <thead class="admin-table-head">
            <tr>
              <th class="px-3 py-2">Date</th>
              <th class="px-3 py-2">All Hits</th>
              <th class="px-3 py-2">Human Hits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5 bg-slate-900/45 text-slate-200">
            <% @daily_totals.each do |date, count| %>
              <tr class="admin-table-row">
                <td class="px-3 py-2"><%= link_to date, admin_visits_path(date: date, days: @days_window), class: "font-medium text-cyan-300 hover:text-cyan-200" %></td>
                <td class="px-3 py-2"><%= count %></td>
                <td class="px-3 py-2"><%= @daily_human_totals[date] || 0 %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </article>

    <article class="admin-card p-5">
      <h2 class="text-lg font-semibold text-white">Top Paths (<%= @selected_date %>)</h2>
      <ul class="mt-4 space-y-2 text-sm text-slate-200">
        <% @top_paths.each do |path, count| %>
          <li class="flex items-start justify-between gap-3 rounded-xl border border-white/10 bg-slate-950/80 px-3 py-2">
            <span class="break-all text-slate-300"><%= path %></span>
            <span class="font-semibold text-cyan-300"><%= count %></span>
          </li>
        <% end %>
        <% if @top_paths.empty? %>
          <li class="rounded-xl border border-white/10 bg-slate-950/80 px-3 py-2 text-slate-400">No visits recorded for this date.</li>
        <% end %>
      </ul>
    </article>
  </div>

  <div class="mt-8 admin-card p-5">
    <h2 class="text-lg font-semibold text-white">Visitor Details (humans only)</h2>
    <p class="mt-1 text-xs text-slate-400">Identity is inferred by IP + user-agent fingerprint. Behind Docker/CDN/proxy setups, network relay IPs can appear when forwarding headers are unavailable.</p>

    <div class="mt-4 overflow-hidden rounded-2xl border border-white/10">
      <table class="min-w-full text-left text-sm">
        <thead class="admin-table-head">
          <tr>
            <th class="px-3 py-2">IP</th>
            <th class="px-3 py-2">Hits</th>
            <th class="px-3 py-2">First Seen</th>
            <th class="px-3 py-2">Last Seen</th>
            <th class="px-3 py-2">User Agent</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5 bg-slate-900/45 text-slate-200">
          <% @visitor_rows.each do |row| %>
            <tr class="admin-table-row">
              <td class="px-3 py-2 font-medium text-cyan-300"><%= row.ip_address %></td>
              <td class="px-3 py-2"><%= row.hits %></td>
              <td class="px-3 py-2"><%= l(Time.zone.parse(row.first_seen_at.to_s), format: :short) %></td>
              <td class="px-3 py-2"><%= l(Time.zone.parse(row.last_seen_at.to_s), format: :short) %></td>
              <td class="px-3 py-2 text-xs text-slate-300"><%= truncate(row.user_agent.to_s, length: 140) %></td>
            </tr>
          <% end %>
          <% if @visitor_rows.empty? %>
            <tr>
              <td colspan="5" class="px-3 py-3 text-slate-400">No human visitor records for this date.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
