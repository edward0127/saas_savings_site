<section class="mx-auto w-full max-w-5xl">
  <div class="admin-page-hero border-emerald-300/20">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-200/90">Configuration</p>
        <h1 class="mt-2 font-heading text-3xl font-bold text-white">Email Settings</h1>
        <p class="mt-2 max-w-2xl text-sm text-slate-200/90">Configure delivery for lead notifications and SMTP transport.</p>
      </div>
      <%= link_to "Back to Leads", admin_leads_path, class: "admin-btn-secondary" %>
    </div>
  </div>

  <%= form_with model: @app_setting, url: admin_settings_path, method: :patch, class: "admin-card space-y-4 p-6" do |form| %>
    <% if @app_setting.errors.any? %>
      <div class="rounded-2xl border border-rose-500/40 bg-rose-500/15 px-4 py-3 text-sm text-rose-200">
        <ul class="space-y-1">
          <% @app_setting.errors.full_messages.each do |message| %>
            <li>- <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid gap-4 sm:grid-cols-2">
      <div>
        <%= form.label :owner_email, "Lead Notification Email", class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.email_field :owner_email, required: true, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :mail_from_email, "Mailer From Address", class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.email_field :mail_from_email, required: true, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_address, class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.text_field :smtp_address, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_port, class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.number_field :smtp_port, min: 1, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_domain, class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.text_field :smtp_domain, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_authentication, class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.select :smtp_authentication, options_for_select([["plain", "plain"], ["login", "login"], ["cram_md5", "cram_md5"]], @app_setting.smtp_authentication), {}, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_username, class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.text_field :smtp_username, class: "admin-input" %>
      </div>
      <div>
        <%= form.label :smtp_password, "SMTP Password (leave blank to keep current)", class: "mb-1 block text-sm font-medium text-slate-200" %>
        <%= form.password_field :smtp_password, class: "admin-input" %>
      </div>
    </div>

    <label class="inline-flex items-center gap-2 text-sm text-slate-200">
      <%= form.check_box :smtp_enable_starttls %>
      Enable STARTTLS
    </label>

    <div>
      <%= form.submit "Save Settings", class: "admin-btn-primary" %>
    </div>
  <% end %>
</section>
