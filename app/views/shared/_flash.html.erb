<% if flash[:notice].present? || flash[:alert].present? %>
  <div class="mx-auto mt-4 w-full max-w-7xl px-4 sm:px-6 lg:px-8">
    <% if flash[:notice].present? %>
      <div class="mb-3 rounded-xl border border-emerald-300 bg-emerald-50 px-4 py-3 text-sm text-emerald-900">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="rounded-xl border border-rose-300 bg-rose-50 px-4 py-3 text-sm text-rose-900">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
<% end %>
