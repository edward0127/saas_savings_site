RAILS_ENV=development
PORT=3000
RAILS_MASTER_KEY=

# Admin HTTP basic auth
ADMIN_USER=admin
ADMIN_PASS=change-me

# Lead notification defaults
OWNER_EMAIL=owner@example.com
MAIL_FROM_EMAIL=no-reply@example.com

# App URL
APP_HOST=localhost
APP_PORT=3000
APP_PROTOCOL=http

# Optional analytics script source
ANALYTICS_SCRIPT_SRC=

# SMTP (optional, can also be changed in /admin/settings)
SMTP_ADDRESS=localhost
SMTP_PORT=1025
SMTP_DOMAIN=localhost
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS=true

# Production security
FORCE_SSL=true
ASSUME_SSL=true
